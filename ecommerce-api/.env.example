###> symfony/framework-bundle ###
APP_ENV=dev
APP_DEBUG=1
APP_SECRET=your_app_secret
###< symfony/framework-bundle ###

###> doctrine/doctrine-bundle ###
# Replace with your actual DB credentials
DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/ecommerce?serverVersion=8.0.32&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> nelmio/cors-bundle ###
# Allow CORS for local development
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'
###< nelmio/cors-bundle ###

###> Stripe Configuration ###
# Replace with your Stripe test or live secret key
STRIPE_SECRET_KEY=your_stripe_secret_key
###< Stripe Configuration ###

###> CORS FRONTEND ORIGIN ###
# The frontend's origin URL for CORS policy
FRONTEND_ORIGIN=http://localhost:5173
###< CORS FRONTEND ORIGIN ###

###> lexik/jwt-authentication-bundle ###
# JWT keys and passphrase (generated via openssl)
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your_jwt_passphrase
###< lexik/jwt-authentication-bundle ###
